<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/card_margin"
        android:elevation="@dimen/card_elevation"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="@dimen/card_album_radius">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:padding="@dimen/covid_title_size">

            <TextView
                android:id="@+id/tv_covid_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Sate name: "
                android:textColor="@color/colorTitle"
                android:textSize="@dimen/covid_title_size" />

            <TextView
                android:id="@+id/tv_covid_total"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_covid_title"
                android:paddingTop="@dimen/card_content_padding"
                android:text="Total District: "
                android:textColor="@color/colorTitle"
                android:textSize="@dimen/covid_title_size" />

            <TextView
                android:id="@+id/tv_covid_confirmed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_covid_total"
                android:paddingTop="@dimen/card_content_padding"
                android:text="Confirmed Case: "
                android:textColor="@color/colorTitle"
                android:textSize="@dimen/covid_title_size" />

            <TextView
                android:id="@+id/tv_covid_active"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_covid_confirmed"
                android:paddingTop="@dimen/card_content_padding"
                android:text="Active case: "
                android:textColor="@color/colorTitle"
                android:textSize="@dimen/covid_title_size" />

            <TextView
                android:id="@+id/tv_covid_death"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_covid_active"
                android:paddingTop="@dimen/card_content_padding"
                android:text="Total Death: "
                android:textColor="@color/colorTitle"
                android:textSize="@dimen/covid_title_size" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
